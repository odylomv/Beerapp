<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BeerActivity">

    <ImageView
        android:id="@+id/aloneBeerpic"
        android:layout_width="225dp"
        android:layout_height="284dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aloneBeerName"
        app:srcCompat="@drawable/beer1" />

    <TextView
        android:id="@+id/aloneBeerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Insert title here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addtoFavBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:text="Favorite"
        app:layout_constraintBottom_toTopOf="@+id/aloneBeerpic"
        app:layout_constraintStart_toEndOf="@+id/aloneBeerName" />

    <TextView
        android:id="@+id/aloneLongDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long description goes here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/aloneBeerpic"
        app:layout_constraintStart_toStartOf="@+id/aloneBeerpic"
        app:layout_constraintTop_toBottomOf="@+id/aloneBeerpic" />
</androidx.constraintlayout.widget.ConstraintLayout>